<h1>Daftar Contact</h1>
<a href="/contact/add" class="btn btn-primary mb-2"> Tambah Data Contact </a>
<% if (msg.length != 0) { %>
<div class="alert alert-success" role="alert"><%= msg %></div>
<% } %>
<table class="table mt-4">
   <thead>
      <tr>
         <th scope="col">#</th>
         <th scope="col">Nama</th>
         <th scope="col">No HP</th>
         <th scope="col">Aksi</th>
      </tr>
   </thead>
   <tbody>
      <% if (!contacts.length) { %>
      <tr>
         <td colspan="4" class="py-3">
            <div class="alert alert-danger fw-bold" role="alert">
               Daftar contact masih kosong
               <br />
            </div>
         </td>
      </tr>
      <% } %> <% contacts.forEach((contact,i) => { %>
      <tr>
         <th scope="row"><%= i+1 %></th>
         <td><%= contact.nama %></td>
         <td><%= contact.nohp%></td>
         <td>
            <a
               href="/contact/<%= contact.nama %> "
               class="btn btn-success badge rounded-pill px-2 py-2"
            >
               <i class="bi bi-info-circle-fill"></i> Detail
            </a>
         </td>
      </tr>
      <% }) %>
   </tbody>
</table>
